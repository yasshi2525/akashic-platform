{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES6"],
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "noImplicitOverride": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
